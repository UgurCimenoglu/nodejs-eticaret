extends ../layouts/main-layout.pug

block content
    form(action='/admin/category' method='post')
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        input#id(type="hidden" name="categoryid" value=`${category._id}`)
        .form-group.row
            label.col-sm-2.col-form-label(for='categoryname') Category Name
            .col-sm-10
                input#name.form-control(type='text' name='categoryname' value=`${category.name}`)

        .form-group.row
            label.col-sm-2.col-form-label(for='description') Description
            .col-sm-10
                textarea#description.form-control(name="description", cols="30", rows="10") #{category.description}

        .form-group.row.offset-2
            button.btn.btn-primary(type='submit') Save Category